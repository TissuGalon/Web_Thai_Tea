<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage Sederhana</title>
    <!-- NeoBrutalism CSS -->
    <link href="https://cdn.jsdelivr.net/gh/rajnandan1/brutopia@latest/dist/assets/compiled/css/app.css"
        rel="stylesheet" crossorigin="anonymous">

    <!-- Tabler Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
</head>

<body>

    <!-- Navbar -->
    <%- include('component/header') %>
        <!-- Navbar -->


        <!-- FORM -->
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img src="../images/product/<%= produk.gambar %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= produk.nama %>
                            </h5>
                            <p class="card-text">
                                <%= produk.deskripsi %>
                            </p>


                        </div>
                    </div>
                </div>
                <div class="col-md-9 p-3 ps-5">
                    <div>
                        <h2 class="mb-4">Checkout Product</h2>
                        <form action="/Proses_Checkout" method="POST">
                            <div class="form-group">
                                <label for="name">Nama</label>
                                <input type="text" class="form-control" id="name" name="nama"
                                    placeholder="Masukkan nama Anda" required>
                            </div>
                            <div class="form-group">
                                <label for="phone">No HP</label>
                                <input type="text" class="form-control" id="phone" name="nohp"
                                    placeholder="Masukkan nomor HP Anda" required>
                            </div>
                            <div class="form-group">
                                <label for="address">Alamat</label>
                                <textarea class="form-control" id="address" name="alamat" rows="3"
                                    placeholder="Masukkan alamat Anda" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="productName">Nama Produk</label>
                                <input type="text" class="form-control" id="productName" name="produk"
                                    placeholder="Masukkan nama produk" readonly value="<%= produk.nama %>">
                            </div>
                            <div class="form-group">
                                <label for="price">Harga</label>
                                <input type="text" class="form-control" id="price" name="harga"
                                    placeholder="Masukkan harga produk" readonly value="<%= produk.harga %>">
                            </div>
                            <div class="form-group">
                                <label for="quantity">Jumlah</label>
                                <input type="number" min="1" value="1" class="form-control" id="quantity" name="jumlah"
                                    placeholder="Masukkan jumlah produk" required>
                            </div>
                            <input type="hidden" name="total" value="<%= produk.harga %>">
                            <input type="hidden" name="tgl_pesan" value="<%= new Date().toISOString().slice(0, 10) %>">
                            <input type="hidden" name="user_id" value="1">
                            <button type="submit" class="btn btn-primary">Pesan Sekarang</button>
                        </form>


                    </div>
                </div>
            </div>





        </div>
        <!-- FORM -->


        <!-- FOOTER -->
        <%- include('component/footer') %>
            <!-- FOOTER -->

            <!-- Bootstrap JS and dependencies -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


            <!-- Neo Brutalism -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>


</body>

</html>